    <div class="top-section">
      <h3><q>people who love to eat are always the best people</q></h3>
      <div class="search-section">
        <form action="/search" method="post">
          <div class="input-group  rounded input-group-lg">
            <div class="input-group-prepend">
              <button class="btn m-0 btn-light waves-effect rounded-0 shadow-none px-4" type="button" data-toggle="dropdown"
                aria-expanded="false"><span class="px-2 filter">Filter</span><i class="fas fa-sliders-h"></i></button>
              <div class="dropdown-menu px-3 py-3 menu-filter">
                <div class="filter-popover">
                  
                </div>
                  <div class="form-group mb-0">
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input"  name="option-1" value="main">
                      <label for="option-1">Appetizers</label>
                    </div>
                  </div>
                  <div class="form-group mb-0">
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input"  name="option-2" value="side">
                      <label for="option-2">Breakfast</label>
                    </div>
                  </div>
                  <div class="form-group mb-0">
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input"  name="option-3" value="drinks">
                      <label for="option-3">Main menu</label>
                    </div>
                  </div>
                  <div class="form-group mb-0">
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input"  name="option-4" value="dessert">
                      <label for="option-4">Dessert</label>
                    </div>
                  </div>
                  <div class="form-group mb-0">
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input"  name="option-5" value="soup">
                      <label for="option-5">Beverages</label>
                    </div>
                  </div>
              </div>
            </div>
            <input type="text" class="form-control " name="search">
            <div class="input-group-append m-0">
              <button type="submit" class="btn btn-light  m-0 rounded-0"><i class="fas fa-search"></i></button>
            </div>
          </div>

        </form>
      </div>
      <a href="/order">
        <button class="btn rounded-0 btn-dark">ORDER NOW</button>
      </a>
